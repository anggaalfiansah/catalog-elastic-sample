generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


// ==========================================
// 1. USERS & AUTH
// ==========================================
model User {
  id        String   @id @default(uuid()) // Pakai UUID biar aman
  email     String   @unique
  password  String   // Nanti di-hash (bcrypt/argon2)
  name      String
  role      Role     @default(STAFF)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relasi: User ini bikin produk apa aja?
  createdProducts Product[] @relation("ProductCreator")
  updatedProducts Product[] @relation("ProductUpdater")
}

enum Role {
  ADMIN   // Bos Besar (Bisa Hapus Data)
  STAFF   // Admin Biasa (Input Barang)
}

// ==========================================
// 2. KATALOG PRODUK
// ==========================================
model Product {
  id          Int      @id @default(autoincrement())
  sku         String   @unique
  name        String
  description String?  @db.Text
  category    String
  
  price       Int      @default(0)
  stock       Int      @default(0)
  
  tags        String?
  isActive    Boolean  @default(true)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // AUDIT TRAIL (Wajib ada User)
  createdById String
  createdBy   User     @relation("ProductCreator", fields: [createdById], references: [id])
  
  updatedById String?  // Bisa null kalau belum pernah diedit
  updatedBy   User?    @relation("ProductUpdater", fields: [updatedById], references: [id])

  @@map("products")
}